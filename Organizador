        <button class="btn btn-primary" id="copy">COPIAR</button>
    </div>
    <hr>
    <div>
        <button class="btn btn-danger" id="back">VOLTAR</button>
    </div>
   
   
 </div>
    <script>
        const btnCopy = document.getElementById('copy')
        const inputLista = document.getElementById('lista')
        const btnOrg = document.getElementById('org')
        const list = []
        const result = document.getElementById('resultado')
        const back = document.getElementById('back')


        btnOrg.addEventListener('click', (e) => {
            let separa = inputLista.value.split(';')
            separa.sort()
           
            for(i = 0; i < separa.length; i++){

                if(separa[i] === separa[i]){
                    console.log(separa[i])
                }

                result.innerHTML += `<div id="ita">${separa[i]}</div>`
            }
            // result.innerHTML += `${separa.sort()}`

        })
        
        btnCopy.addEventListener('click', () =>{
            navigator.clipboard.writeText(result.innerText)
        })

        back.addEventListener('click', ()=> {
            window.history.back()
        })
    </script>
